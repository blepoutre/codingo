<!DOCTYPE html>
<html>
  <head>
    <title>Codingo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="body_target">
    <% if current_page?(root_path) %>
      <%= render "shared/navbar", red_background: false %>
    <% else %>
      <%= render "shared/navbar", red_background: true %>
      <% body_class = "body_target" %>
      <% body_class += " body-background" if local_assigns[:body_background] %>
    <% end %>
    <%= yield %>
  </body>
</html>
