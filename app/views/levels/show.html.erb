<body style="background-color: #F6F3C8">

<!-- Modal -->
<%= render "modal"%>

<!-- Exo & IDE -->
<div class="container">
  <div class="mt-5">
  <iframe src="<%= @level.url %>" width="100%" height="500" frameborder="0" marginwidth="0" marginheight="0" allowfullscreen></iframe>
  </div>

<!-- Answer -->
<% counter = 0 %>
<% reponse = ["reponse1", "reponse2", "reponse3", "reponse4", "reponse5"] %>
  <fieldset data-controller="answer">
    <legend>Trouve la bonne réponse</legend>
    <% @level.answers.each do |answer| %>
      <div data-answer-target="<%=reponse[counter]%>">
        <input type="checkbox" id="scales" name="scales"/>
        <label for="scales"><%= answer %></label>
      </div>
      <% counter += 1 %>
    <% end %>
    <button type="submit" class="modalBtn mt-2" data-action="click->answer#check">Répondre !</button>
  </fieldset>
</div>
</body>
